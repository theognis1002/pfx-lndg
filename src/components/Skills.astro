---
import { siteConfig } from "../config";

const skillCategories = Array.isArray(siteConfig.skills)
  ? siteConfig.skills.filter(
      (category) => Array.isArray(category.items) && category.items.length > 0,
    )
  : [];
const hasSkills = skillCategories.length > 0;
---

{
  hasSkills && (
    <section id="skills" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-2xl sm:text-3xl md:text-4xl xl:text-5xl font-bold text-gray-900 font-mono">
              Skills
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              {skillCategories.map((category) => (
                <div class="space-y-3">
                  <h3 class="text-lg sm:text-xl font-semibold text-gray-900">
                    {category.title}
                  </h3>
                  <ul class="space-y-2 list-disc list-inside text-base sm:text-lg text-gray-600">
                    {category.items.map((skill) => (
                      <li>{skill}</li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
